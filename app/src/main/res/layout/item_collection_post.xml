<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/CPNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="30dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:freezesText="true" />

    <LinearLayout
        android:id="@+id/detailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/CPNameTV"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/CPImageIV"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/post_img"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/CPTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:padding="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:id="@+id/CPDetailBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search_ic"
            android:background="@drawable/ic_circle"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:id="@+id/CPDeleteBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_trash"
            android:background="@drawable/ic_circle"
            android:padding="5dp"
            android:layout_toStartOf="@id/CPDetailBtn"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</RelativeLayout>
