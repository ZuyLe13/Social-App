<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="searchET">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:textColor">#242424</item>
    </style>

    <style name="inputET">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:textColor">#242424</item>
    </style>
    
    <style name="button">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:background">@drawable/gradient_bg</item>
    </style>

    <style name="focusBtn">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="normalBtn">
        <item name="android:background">#fff</item>
        <item name="android:textColor">#BDBDBD</item>
        <item name="android:textSize">18dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textNormal">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#242424</item>
    </style>

    <style name="textSmall">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>

    <style name="textLarge">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#242424</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#242424</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>